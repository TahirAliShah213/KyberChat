<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    app:cardBackgroundColor="@color/gray_200"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/delivered"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"

                android:src="@drawable/check_read" />

        </RelativeLayout>



        <TextView
            android:id="@+id/dialog_delivered_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_r"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="10dp"
            android:paddingBottom="8dp"
            android:text="@string/delivered_sub"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/dialog_delivered_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="@string/read"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/profile_backg"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="@string/a"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/profile"
                android:fontFamily="@font/inter_medium"
                android:text="@string/anderson"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/check_read_copy" />


        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
