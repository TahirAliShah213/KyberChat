<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:color="@color/blue" android:state_focused="true">
    <shape>
        <solid android:color="@android:color/transparent" />
        <stroke android:width="2dp" android:color="@color/blue" /> <!-- Blue when focused -->
    </shape>
    </item>
    <!-- Default (unfocused) state -->

    <item android:color="@color/gray" android:state_focused="false">
    <shape>
        <solid android:color="@android:color/transparent" />
        <stroke android:width="2dp" android:color="@color/gray" /> <!-- Gray when unfocused -->
    </shape>
    </item>
</selector>
